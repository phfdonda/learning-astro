---
import Image from "../components/Image.astro";

const { title } = Astro.props;
---

<nav>
  <Image
    src="/public/images/logo-otica.png"
    alt="Logo Otica"
    width="10%"
    height="auto"
    maxHeight="90%"
  />
  <h1>{title}</h1>
</nav>

<style>
  nav {
    display: flex;
    justify-content: center;
    align-items: center;
    background: white;
    color: black;
    width: 100%;
    height: 10svh;
  }

  h1 {
    margin: 0;
  }
</style>
